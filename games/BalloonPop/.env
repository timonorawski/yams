# Balloon Pop Game Configuration
# Copy this to .env.local to override defaults

# Display settings
SCREEN_WIDTH=1280
SCREEN_HEIGHT=720

# Balloon spawning
SPAWN_RATE=1.5
BALLOON_MIN_SIZE=40
BALLOON_MAX_SIZE=80

# Movement
FLOAT_SPEED_MIN=50
FLOAT_SPEED_MAX=150

# Horizontal drift (side-to-side movement)
DRIFT_SPEED_MAX=30

# Game rules
MAX_ESCAPED=10
TARGET_POPS=0

# Audio
AUDIO_ENABLED=true
